                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="8dp"

                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textViewtime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="10:00 AM- 12:15 PM"
                        android:textColor="#262731"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewClock"
                        app:layout_constraintStart_toEndOf="@+id/imageViewClock"
                        app:layout_constraintTop_toBottomOf="@+id/textViewSpe2" />

                    <ImageView
