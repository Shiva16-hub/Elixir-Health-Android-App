                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewdoc2"
                        app:layout_constraintStart_toStartOf="@+id/textViewSpe2"
                        app:layout_constraintTop_toBottomOf="@+id/textViewSpe2"
                        app:srcCompat="@drawable/clock" />

                    <ImageView
